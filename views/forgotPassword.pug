extends ./layout
block content
  div(style='height:100%')
    div.shadow.p-3(style="height:89%;background:linear-gradient(rgb(246,198,144),rgb(236,143,115))")
    
      div.container.d-flex.justify-content-center.align-items-center(style='height:80%')
        div.card.shadow(style="width: 30rem;")
          div.card-body
            div.d-inline-flex.align-items-center(style="border")
              img.animated.pulse(src='letter.png' style='width:50px;height:50px')
              h4.ml-3.d-inline.text-md-center.font-weight-light Account Recovery
            div.mt-3(class="form-group")
              input.border-bottom(style="border:none" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email")


            div.d-flex.justify-content-center.align-items-center
              a(class="btn btn-dark" href="email-sent" role="button") Submit

      